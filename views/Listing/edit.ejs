<% layout('layout/boilerplate') -%>
<div class="row">
    <div class="col-8 offset-2">


<body style="background-color: #161b22; color: white;">
    <h5 class="mt-3"> <u>Edit infromation</u></h5>
   
    <form action="/listings/<%= list._id %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data" >

        <div class="mb-1">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="listing[title]" value="<%= list.title %>" required>
            <div class="valid-feedback">
                looks good
            </div>
               <div class="invalid-feedback">
                enter title
            </div>
        </div>
        <div class="mb-1">
            <label for="description" class="form-label">Description</label>
            <input type="text" id="description" class="form-control" name="listing[description]"value="<%= list.description %>" required> 
              <div class="valid-feedback">
                looks good
            </div>
               <div class="invalid-feedback">
                enter description
            </div>
        </div>
       <div><img src="<%=  previewUrl%>" alt=""></div>
        <div class="mb-1">
            <label for="image" class="form-label">upload new Image </label>
            <input type="file" id="image" class="form-control" name="listing[image]" > 
        </div>

        <div class="row">
            <div class="mb-1 col-md-4">
                <label for="country" class="form-label">Country</label>
                <input type="text" id="country" class="form-control" name="listing[country]" value="<%= list.country %>" required>
                  <div class="valid-feedback">
                looks good
            </div>
               <div class="invalid-feedback">
                enter country
            </div>
    
            </div>
            <div class="mb-1 col-md-4">
                <label for="location" class="form-label">Location</label>
                <input type="text" id="location" class="form-control" name="listing[location]" value="<%= list.location %>" required>
                  <div class="valid-feedback">
                looks good
            </div>
               <div class="invalid-feedback">
                enter location
            </div>
    
            </div>
            <div class="mb-1 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" id="price" class="form-control" name="listing[price]" value="<%= list.price %>" required>
                  <div class="valid-feedback">
                looks good
            </div>
               <div class="invalid-feedback">
                enter price
            </div>
            </div>
        </div>
        
        <button class="btn btn-outline-warning">Update</button>
    </form>

</body>
</div>
</div>