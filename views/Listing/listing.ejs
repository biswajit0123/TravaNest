<% if(listings.length === 0 ){ %>
  <h1 class="text-center">No listings found</h1>
<%} else { %>
  <body>
    <div class="row  row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-1 " >
      <% for (let list of listings) { %>
        <div class="card col">
          <img src="<%= list.image.url %>" class="card-img-top" alt="listing image">
          <div class="card-body">
            <p class="card-text">
             <b> <%= list.title %></b>  <br>
              &#8377; <%= list.price.toLocaleString("en-IN") %>
              <i class="tax-info">&nbsp;&nbsp; +18 GST</i>
            </p>
            <a href="/listings/<%= list._id %>" class="detail"><button class="dbtn">visit</button></a>
          </div>
        </div>
      <% } %>
    </div>

  
