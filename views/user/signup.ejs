<% layout('layout/boilerplate') -%>


<div class="row offset-md-3 signup-container" >

    <div class="col-12 col-md-8">
        <h4 style="text-align: center;">Create account</h4>
        <form action="/signup" method="post" class="needs-validation" novalidate>  
  <div class="mt-3">
    <label for="username" class="form-label">Username</label>
    <input type="text" class="form-control" id="username"  name="username"  placeholder="Enter username" required>
    <div class="invalid-feedback">shouldn't be empty    </div>
  </div>
  <div class="mt-3">
    <label for="email"  class="form-label">Email</label>
    <input type="text" class="form-control" id="username" name="email"  placeholder="biswajit@gmail.com" required>
       <div class="invalid-feedback">shouldn't be empty    </div>
  </div>
  <div class="mt-3">
    <label for="password"  class="form-label">Password</label>
    <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
     <div class="invalid-feedback">shouldn't be empty    </div>
  </div>

  <button  class="btn btn-success mt-3">Register</button>
  <p class="mt-3">Already have an account? <a href="/login">login</a> </p>
</form>
    </div>

</div>