<% layout('layout/boilerplate') -%>


<div class="row offset-md-3 offset-1 signin-container " >

    <div class="col-md-8 col-12">
        <h4 style="text-align: center;">login your account</h4>
        <form action="/login" method="post" class="needs-validation" novalidate>  
  <div class="mt-3">
    <label for="username" class="form-label">Username</label>
    <input type="text" class="form-control" id="username"  name="username"  placeholder="Enter username" required>
    <div class="invalid-feedback">shouldn't be empty    </div>
  </div>

  <div class="mt-3">
    <label for="password"  class="form-label">Password</label>
    <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
     <div class="invalid-feedback">shouldn't be empty    </div>
  </div>

  <button  class="btn btn-success mt-3">Log in </button>

  <p class="mt-3">don't have an account? <a href="/signup">Register</a> </p>
</form>
    </div>
</div>